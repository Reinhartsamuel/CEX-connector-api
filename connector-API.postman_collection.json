    {
      "name": "Gate.io Exchange",
      "description": "Gate.io futures trading endpoints with two authentication patterns: direct API key headers and exchange_id from database",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"api_key\": \"{{gateApiKey}}\",\n  \"api_secret\": \"{{gateApiSecret}}\",\n  \"user_id\": \"your_user_id_here\",\n  \"exchange_user_id\": \"your_gate_io_account_id\"\n}"
            },
            "url": {
              "raw": "{{local-baseUrl}}/gate/register-user",
              "host": ["{{local-baseUrl}}"],
              "path": ["gate", "register-user"]
            },
            "description": "Register a Gate.io user by storing API credentials in the database. Returns an exchange_id for future operations."
          },
          "response": []
        },
        {
          "name": "Place Futures Order (Direct API)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Gate-API-Key",
                "value": "{{gateApiKey}}"
              },
              {
                "key": "X-Gate-API-Secret",
                "value": "{{gateApiSecret}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contract\": \"BTC_USDT\",\n  \"size\": 1,\n  \"price\": 50000,\n  \"side\": \"buy\",\n  \"tif\": \"ioc\",\n  \"text\": \"order-001\",\n  \"reduce_only\": false,\n  \"close_position\": false,\n  \"autotrader_id\": \"autotrader-001\",\n  \"user_id\": \"user-001\"\n}"
            },
            "url": {
              "raw": "{{local-baseUrl}}/gate/place-futures-order",
              "host": ["{{local-baseUrl}}"],
              "path": ["gate", "place-futures-order"]
            },
            "description": "Place a futures order using API keys in headers (direct authentication)"
          },
          "response": []
        },
        {
          "name": "Place Futures Order (Database)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contract\": \"BTC_USDT\",\n  \"size\": 1,\n  \"price\": 50000,\n  \"side\": \"buy\",\n  \"tif\": \"ioc\",\n  \"text\": \"order-001\",\n  \"reduce_only\": false,\n  \"close_position\": false,\n  \"autotrader_id\": \"autotrader-001\",\n  \"user_id\": \"user-001\",\n  \"exchange_id\": \"your_exchange_id_from_registration\"\n}"
            },
            "url": {
              "raw": "{{local-baseUrl}}/gate/place-futures-order-x",
              "host": ["{{local-baseUrl}}"],
              "path": ["gate", "place-futures-order-x"]
            },
            "description": "Place a futures order using exchange_id to retrieve API credentials from database"
          },
          "response": []
        },
        {
          "name": "Close Futures Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contract\": \"BTC_USDT\",\n  \"size\": 1,\n  \"price\": 50000,\n  \"side\": \"sell\",\n  \"tif\": \"ioc\",\n  \"text\": \"close-order-001\",\n  \"reduce_only\": false,\n  \"close_position\": true,\n  \"autotrader_id\": \"autotrader-001\",\n  \"user_id\": \"user-001\",\n  \"exchange_id\": \"your_exchange_id_from_registration\"\n}"
            },
            "url": {
              "raw": "{{local-baseUrl}}/gate/close-futures-order-x",
              "host": ["{{local-baseUrl}}"],
              "path": ["gate", "close-futures-order-x"]
            },
            "description": "Close a futures position using exchange_id to retrieve API credentials from database"
          },
          "response": []
        },
        {
          "name": "Whitelist Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Gate-API-Key",
                "value": "{{gateApiKey}}"
              },
              {
                "key": "X-Gate-API-Secret",
                "value": "{{gateApiSecret}}"
